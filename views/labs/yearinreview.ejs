    <script>
      $(function () {
        $('ul li').on('click', function () {
          $('summary').removeClass('text-primary');
          $('ul li').not(this).removeClass('text-primary');
          $(this).toggleClass('text-primary');
        });
      });

      $(function () {
        $('details').on('click', function () {
          $('details').not(this).removeAttr('open').find('summary').removeClass('text-primary');
          $('ul li').not($(this).find('li')).removeClass('text-primary');
          if ($(this).attr('open')) {
            $(this).find('summary').removeClass('text-primary');
          } else {
            $(this).find('summary').addClass('text-primary');
          }
        });
      });
    </script>


