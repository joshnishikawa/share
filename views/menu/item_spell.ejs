<div class="rounded-3 d-flex YM">
  <div class="d-flex me-3" data-bs-toggle="modal" data-bs-target="#spell_modal">
    <i class="material-icons text-secondary point" data-bs-toggle="modal" data-bs-target="#spell_modal">
      info
    </i>

    <div class="rounded-3 bg-secondary text-white text-center fs-5" style="width:30px;height:30px;">s</div>
    <div class="rounded-3 bg-primary text-white text-center fs-5" style="width:30px;height:30px;">p</div>
    <div class="rounded-3 bg-warning text-white text-center fs-5" style="width:30px;height:30px;">e</div>
    <div class="rounded-3 bg-primary text-white text-center fs-5" style="width:30px;height:30px;">l</div>
    <div class="rounded-3 bg-secondary text-white text-center fs-5" style="width:30px;height:30px;">l</div>
  </div>

  <form id="spellForm" action="/spell" method="POST" class="menuitem d-flex justify-content-end w-100">
    <input type="hidden" value="" name="deck">
    <input type="hidden" value="" name="deckType">
    <button id="spellButton" type="submit" class="btn btn-sm btn-primary" style="height:100%;">Start</button>
  </form>
</div>

















