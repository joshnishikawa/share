<div class="rounded-3 border p-1 shadow d-flex YM">
  <i class="material-icons text-secondary" 
    style="line-height:1.4rem;font-size:1.4rem;cursor:pointer;" 
    data-bs-toggle="modal" data-bs-target="#spell_modal">
    info
  </i>

  <div class="spell rounded-3 bg-secondary text-white text-center">s</div>
  <div class="spell rounded-3 bg-primary text-white text-center">p</div>
  <div class="spell rounded-3 bg-warning text-white text-center">e</div>
  <div class="spell rounded-3 bg-primary text-white text-center">l</div>
  <div class="spell rounded-3 bg-secondary text-white text-center">l</div>

  <form id="spellForm" action="/spell" method="POST" class="d-flex justify-content-end w-100">
    <input type="hidden" value="" name="deck">
    <input type="hidden" value="" name="deckType">
    <button id="spellButton" type="submit" class="btn btn-primary ms-3" style="height:100%;">Start</button>
  </form>
</div>

<%- include ("../modals/modal_spell.ejs") %>

<script>
$(function(){
  $("#spellButton").on('click', (e)=>{
    e.preventDefault();
    if (!window.deck || window.deck.length == 0) {
      alert("<%- __('pleaseSelect') %>");
    }
    else {
      $("#spellForm input[name='deck']").val(JSON.stringify(window.deck));
      $("#spellForm input[name='deckType']").val(window.deckType);
      $("#spellForm").submit();
    }
  });
});

</script>