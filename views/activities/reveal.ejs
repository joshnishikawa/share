<%- include('../head'); -%>
<style>
  #blurme{
    font-family: "YM Digi Kyokasho NP-B", sans-serif;
    font-size: 10rem;
    font-weight:bold;
    text-shadow: 5px 5px 10px #99c;
    -webkit-text-stroke: 5px DarkSlateBlue;
    color:SlateBlue;
    height:100vh;
    position:relative;
  }

  #blurme img{
    position:absolute;
    margin: auto;
    left: 0;
    right: 0;
    text-align: center;
    height:90vh;
    max-width:90vw;
    z-index:-1;
  }

  :root{
    --cursorX: 50%;
    --cursorY: 50%;
    --light: 5px;
    --dark: 50px;
  }

  #mask {
    cursor: none;
    width: 100%;
    height: 100%;
    background-color: hsla(0, 0%, 0%, 1);
    mask:radial-gradient(
      circle at var(--cursorX) var(--cursorY),
      transparent var(--light),
      black var(--dark)
    );
    -webkit-mask:radial-gradient(
      circle at var(--cursorX) var(--cursorY),
      transparent var(--light),
      black var(--dark)
    );
  }
  body{
    background-image: none;
  }
</style>


<div class="d-flex">

  <button class="btn btn-sm btn-outline-secondary p-0 me-3" data-bs-toggle="modal" data-bs-target="#reveal_modal">
    <i class="material-icons">info</i>
  </button>

  <select id="style" class="form-control form-control-sm" style="width:fit-content;" name="style">
    <option value="" disabled selected>Style</option>
    <option value="spotlight">Spotlight</option>
    <option value="blur">Fog</option>
    <option value="pixelate">Pixels</option>
  </select>

</div>

<div id="blurme" class="text-center"></div>
<div id="loadme" class="text-center" style="height:100vh;display:none;"></div>

<%- include ("../modals/modal_reveal.ejs") %>

<script>
$(function(){
// PREPARE THE DECK ////////////////////////////////////////////////////////////
  const deckType = '<%- deckType %>';

  const params = <%- params %>;
  var deck = <%- JSON.stringify(deck) %>;
  var style = params.style;
  document.title = `Reveal ${style} ${deckType}`;

  $("#style").val(style);
  $("#style").on('change', (e)=>{style = e.target.value;e.target.blur();setStyle();});

  var index = 0;
  deck = FYshuffle(deck);

// FUNCTIONS ///////////////////////////////////////////////////////////////////
  var factor = 4; // how big a pixel is in the pixelate style

// these are for the spotlight style
  var light = 5;
  var dark = 9;
  var x = document.clientX;// || e.touches[0].clientX
  var y = document.clientY;// || e.touches[0].clientY

  renderPixelated = (f)=>{
    let img1 = $("#loadme img")[0];

    img1.onload = ()=>{
      let c = document.createElement("canvas");
      let w = img1.width;
      let h = img1.height;
      c.width = w*2;
      c.height = h*2;

      if (f >= w){}
      else {
        let ctx = c.getContext('2d');
        ctx.drawImage(img1, 0, 0);
        
        let img2 = new Image();
        var pixelArr = ctx.getImageData(0, 0, w, h).data;
        var sample_size = Math.floor(w / factor);

        for (let y = 0; y < h; y += sample_size) {
          for (let x = 0; x < w; x += sample_size) {
            let p = (x + (y*w)) * 4;

            ctx.fillStyle = pixelArr[p+3] < 1 
                          ? 'rgba(255,255,255,1)' 
                          : `rgba(${pixelArr[p]},${pixelArr[p+1]},${pixelArr[p+2]},1)`;
            ctx.fillRect(x*2, y*2, sample_size*2, sample_size*2);
          }
        }

        img2.src = c.toDataURL("image/jpeg");
        $("#blurme").html(img2);
      }
    }
  }


  renderSpotlight = ()=>{
    $("#blurme").html(`<img src="${deck[index].image}" 
                        alt="${deck[index].word}"><div id="mask"></div>`);
      document.documentElement.style.setProperty('--cursorX', x + 'px')
      document.documentElement.style.setProperty('--cursorY', y + 'px')
      document.documentElement.style.setProperty('--light', light + 'px')
      document.documentElement.style.setProperty('--dark', dark + 'px')
  }


  growSpotlight = (e)=>{
    light *= 1.01;
    dark *= 1.01;
    x = e.clientX;// || e.touches[0].clientX
    y = e.clientY;// || e.touches[0].clientY
    document.documentElement.style.setProperty('--cursorX', x + 'px')
    document.documentElement.style.setProperty('--cursorY', y + 'px')
    document.documentElement.style.setProperty('--light', light + 'px')
    document.documentElement.style.setProperty('--dark', dark + 'px')
  }


  setBlur = (blr)=>{
    // map a blr of 0-100 to a size of 90-10
    let size = 90 - (blr/100)*80;
    let margin = (100 - size)/2;

    $("#blurme img").css({
      "filter": `blur(${blr}px)`, 
      "-webkit-filter": `blur(${blr}px)`,
      "height": `${size}vh`,
      "margin-top": `${margin}vh`,
    });
  }

// PICK A STYLE ////////////////////////////////////////////////////////////////
  function setStyle(){
    switch (style){
      case 'blur':
        var blr = 100;

        $(document).off('keydown').on('keydown', (e)=>{
          if (e.keyCode == 13){
            e.preventDefault();
            index++;
            if (index < deck.length){
              blr = 100;
              $("#blurme").html(`<img src="${deck[index].image}" alt="${deck[index].word}">`);
            }
            else {
              $("#blurme").html("All done!");
            }
          }
          else if (e.keyCode == 37){
            e.preventDefault();
            blr = blr == 100 ? 100 : blr +1;
          }
          else if (e.keyCode == 39){
            e.preventDefault();
            blr = blr == 0 ? 0 : blr -1;
          }
          setBlur(blr);
        });

        $("#blurme").html(`<img src="${deck[index].image}" alt="${deck[index].word}">`);
        setBlur(blr);
        break;

      case 'pixelate':
        $("#loadme").html(deck[0].image);

        $(document).off('keydown').on('keydown', (e)=>{
          if (e.keyCode == 13){
            e.preventDefault();
            index++;
            if (index < deck.length){
              factor = 4;
              $("#loadme").html(`<img src="${deck[index].image}" alt="${deck[index].word}">`); // load the image
            }
            else {
              $("#blurme").html("All done!");
            }
          }
          else if (e.keyCode == 37){
            e.preventDefault();
            factor = factor <= 4 ? 4 : factor/2;
            $("#loadme").html(`<img src="${deck[index].image}" alt="${deck[index].word}">`); // load the image
          }
          else if (e.keyCode == 39){
            if (e.repeat) return;
            e.preventDefault();
            factor = factor*2;
            $("#loadme").html(`<img src="${deck[index].image}" alt="${deck[index].word}">`); // load the image
          }
          renderPixelated(factor);
        });

        $("#loadme").html(`<img src="${deck[index].image}" alt="${deck[index].word}">`); // load the image
        renderPixelated(factor);
        break;

      case 'spotlight':
        getNext = () => {
          index++;
          if (index < deck.length){
            light = 5;
            dark = 9;
            renderSpotlight();
          }
          else {
            $("#mask").hide();
            $("#blurme").html("All done!");
          }
        }

        $(document).off('kedown').on('keydown', (e)=>{
          if (e.keyCode == 13){
            e.preventDefault();
            getNext();
          }
        });

        $(document).off('dblclick').on('dblclick', (e)=>{
          getNext();
        });

        $(document).on('mousemove', growSpotlight);
        renderSpotlight();
        break;

      case 'blinder':
        console.log('blinder');
        break;
      default:
        console.log('whu?');
    }
  }

  setStyle();
});
</script>

