            </button>

            <!-- this button will open a modal to confirm clearing the canvas -->

            <button id="clearCanvas" class="btn btn-sm btn-danger">
              <i class="material-icons">delete</i>
            </button>
          </div>
        </div>

      </ul>
    </div>

