<%- include('../head'); -%>
<style>
  #currentSlide{
    position:relative;
    font-family: "UD Digi Kyokasho NP-B", sans-serif;
    height: 90%;
    font-size: 10rem;
    font-weight:bold;
    text-shadow: 5px 5px 10px #99c;
    -webkit-text-stroke: 3px DarkSlateBlue;
    color:SlateBlue;
  }
  #currentSlide img{
    position:absolute;
    margin: auto;
    left: 0;
    right: 0;
    text-align: center;
    height:90%;
    z-index:-1;
  }

  #display img{
    position:absolute;
    margin: auto;
    left: 0;
    right: 0;
    max-width:90%;
    max-height:90%;
  }

</style>

<body>
  <div class="d-flex">
    <a href="/teachers" class="btn btn-sm btn-outline-secondary p-0">
      <i class="material-icons">close</i>
    </a>

    <button class="btn btn-outline-info p-0" data-bs-toggle="modal" data-bs-target="#bingo_modal">
      <i class="material-icons">info</i>
    </button>

    <div id="start" class="btn btn-sm btn-outline-success">START</div>
  </div>


  <div class="container-fluid" style="min-height:100vh;">
    <div class="row">
      <div id="display" class="col d-flex flex-wrap justify-content-center text-center" style="display:none;"></div>
    </div>

    <div id="slides" class="row" style="display:none;">
      <div class="col-1 text-center">
        <button id="prev" class="btn btn-light" style="min-height:100%" aria-label="previous slide">
          <i class="material-icons md-large">navigate_before</i>
        </button>
      </div>

      <div class="col-10 text-center" style="height:80vh;position:relative;">
        <div id="currentSlide" class="text-center p-5"></div>
      </div>

      <div class="col-1 text-center">
        <button id="next" class="btn btn-light" style="min-height:100%" aria-label="next slide">
          <i class="material-icons md-large">navigate_next</i>
        </button>
      </div>
    </div>

  </div>

<%- include ("../modals/modal_bingo.ejs") %>

<script>
$(function(){
// PREPARE THE DECK ////////////////////////////////////////////////////////////
  var url = window.location.href;
  const searchParams = new URLSearchParams(url.substring(url.indexOf('?')));
  const setName = searchParams.get('setName');
  const deckType = searchParams.get('deckType');
  var deck = getDeck({setName, deckType});
  var index = 0;

// PREPARE THE DISPLAY /////////////////////////////////////////////////////////
  for (let i of deck){
    $('#display').append(
       `<div class="rounded-3 px-3 bg-white border display-1">
          <div style="font-size:3rem;">
            ${i.name.split('(')[0].replace('_', " ")}
            <div style="${deckType == "text" ? '' : "height:8rem;width:8rem;"} position:relative;">
              ${deckType == "text" ? '' : i.image}
            </div>
          </div>
        </div>`);
  }

  deck = FYshuffle(deck);

  $("#currentSlide").html(deck[0].image);

  $("#display").show();

  $("#start").on('click', ()=>{
    $("#display").empty();
    $("#slides").show();
  });

  $("#prev").on('click', ()=>{
    if (index > 0) {
      index--;
      $("#currentSlide").html(deck[index].image);
    }
  });

  $("#next").on('click', ()=>{
    if (index < deck.length-1) {
      index++;
      $("#currentSlide").html(deck[index].image);
    }
  });

  $(document).on('keydown', (e)=>{
    if (e.key == "ArrowLeft") $("#prev").click();
    if (e.key == "ArrowRight") $("#next").click();
  });

});

</script>

