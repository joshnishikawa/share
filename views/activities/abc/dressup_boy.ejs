      <div id="boy" style="height:600px;position:relative;">
        <img src="/image/dressup/boy/_boy.png" style="height:600px;position:absolute;left:0;" alt="Boy">
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/dressup.js"></script>
<script>
$(function() {
  // Initialize boy dressup with specific selectors
  initializeDressup({
    clothingSelector: '#boyclothes img',
    characterSelector: 'img[alt="Boy"]',
    clothingClass: 'clothing-on-boy'
  });
});
</script>
