<%- include('../../head'); -%>
<body>

  <button id="home" class="btn btn-sm btn-outline-secondary p-0" style="position:absolute;right:0;" onclick="location.href='/letters';">
    <i class="material-icons">home</i>
  </button>

  <div class="container-fluid" style="min-height:100vh;">
    <div class="row">

      <div class="col">
        <div id="all" class="d-flex flex-wrap"></div>
      </div>

      <div class="col">
        <div id="penmanship" class="mx-auto" style="min-height:400px;width:400px;"></div>
      </div>

    </div>
  </div>

</body>


<script>

$(function(){
  document.title = 'Penmanship';
  let letters = ["a","b","c","d","e","f","g","h","i","j","k","l","m","n","o","p","q","r","s","t","u","v","w","x","y","z"];
  let sounds = {
    "a": "aei", "b": "bmp", "c": "cdgknstxyz", "d": "cdgknstxyz", "e": "aei", 
    "f": "fv", "g": "cdgknstxyz", "h": "j-ch-sh", "i": "aei", "j": "j-ch-sh", 
    "k": "cdgknstxyz", "l": "l", "m": "bmp", "n": "cdgknstxyz", "o": "o", 
    "p": "bmp", "q": "qw", "r": "r", "s": "cdgknstxyz", "t": "cdgknstxyz",
    "u": "u", "v": "fv", "w": "qw", "x": "cdgknstxyz", "y": "cdgknstxyz", 
    "z": "cdgknstxyz"
  };

  for(let i of letters){
    $("#all").append(`<div class="penmanship letter lc" style="cursor:pointer;font-size:80px;line-height:80px;width:100px;height:100px;">${i}</div>`);
  }

  $(".lc").on("click", function(){
    let letter = $(this).text();
    $("#penmanship").html(`<div class="penmanship shadow">
                            <img src="/image/abc/${letter}.gif" 
                            class="img-fluid" 
                            alt="${letter}"
                            onerror="altOnly(this)"></div>`);
    // $("#pronunciation").html(`<img src="/image/abc/${sounds[letter]}.png" class="img-fluid" alt="${letter}">`)
  });

  $(document).on("keydown", function(e){
    if (letters.includes(e.key)){
      $("#penmanship").html(`<div class="penmanship shadow">
                              <img src="/image/abc/${e.key}.gif" 
                                   class="img-fluid" 
                                   alt="${e.key}"
                                   onerror="altOnly(this)">
                              </div>`);
    }
    else if (e.key == "Backspace"){
      $("#penmanship").empty();
    }
  });
});

</script>
