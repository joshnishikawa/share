      <%- include('../menu/menu_type.ejs') -%>
    </div>

  </div>
</div>

<script>
$(function(){
  $(`#text-tab`).addClass("active");
  let text_decks = <%- JSON.stringify(text_decks) %>;
  window.deck = [];
  window.deckType = 'text';

  for (let t in text_decks) {
    if ( ["animals", "objects", "shapes", "colors"].includes(t) ) continue;
    $("#tags").append(`<div class="form-check m-3">
      <input class="form-check-input" type="radio" name="tags" id="tag_${t}" value="${t}" aria-label="tags">
      <label class="form-check-label me-3" style="margin-left:-5px;" for="tag_${t}">${t} (${text_decks[t].length})</label>
    </div>`);
  }

  $("#firstNum").on("change", (e)=>{
    let val = parseInt(e.target.value);
    let max = $("#lastNum").val();
    max = max ? parseInt(max) : 0;
    $("#numbers").prop("checked", true);
    if (max < val) $("#lastNum").val(val);
  });

  $("#lastNum").on("change", (e)=>{
    let val = parseInt(e.target.value);
    let min = $("#firstNum").val();
    min = min ? parseInt(min) : 0;
    $("#numbers").prop("checked", true);
    if (min > val) $("#firstNum").val(val);
  });

  $("#tags").on("change", (e)=>{
    window.deck = [];
    if ( $("#numbers").prop("checked") ) {
      let from = parseInt($("#firstNum").val());
      let to = parseInt($("#lastNum").val());
      for (let i=from; i<=to; i++) {
        window.deck.push({name: i});
      }
    }
    else {
      let deck = text_decks[e.target.value];
      for (let i=0; i<deck.length; i++) {
        window.deck.push({name: deck[i]});
      }
    }
  });

});
</script>

